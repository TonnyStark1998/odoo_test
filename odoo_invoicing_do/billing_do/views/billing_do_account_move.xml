<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="billing_do_view_move_form">
        <field name="name">billing.do.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type' and position()=1]" position="replace" />
            <xpath expr="//span[hasclass('o_form_label') and @attrs]" position="replace" />
            <xpath expr="//field[@name='invoice_sequence_number_next_prefix' and position()=1]" position="replace" />
            <xpath expr="//field[@name='invoice_sequence_number_next' and position()=1]" position="replace" />
            <xpath expr="//h1[hasclass('mt0')]" position="replace">
                <span class="o_form_label" attrs="{'invisible': ['|', ('type', 'in', ['entry', 'in_invoice', 'in_refund']), ('name', '=', '/')]}">
                    <field name="type" readonly="1" nolabel="1"/>
                </span>
                <h2 class="mt0" style="color:#474747;">
                    <field name="use_sequence" attrs="{'invisible': 1}" />
                    <field name="name" readonly="True" attrs="{'invisible': ['|', ('name', '=', '/'), '&amp;', ('type','=','in_invoice'), ('use_sequence', '=', False)]}" />
                    <field name="ncf_sequence_next_number" readonly="True" attrs="{'invisible': ['|', ('state','!=','draft'), '|', ('name','!=','/'), '&amp;', ('type', '=', 'in_invoice'), ('use_sequence', '=', False)]}" />
                </h2>
            </xpath>
            <xpath expr="//field[@name='ref']" position="before">
                <field name="is_tax_valuable" attrs="{'invisible': 1}" />
                <field name="income_type" attrs="{'invisible': [('type', '!=', 'out_invoice')], 'readonly': [('state', '!=', 'draft')]}" />
                <field name="ncf" attrs="{'invisible': ['|', ('type', '!=', 'in_invoice'), '|', ('is_tax_valuable', '=', False), ('use_sequence', '=', True)], 'required': ['&amp;', ('type', '=', 'in_invoice'), ('is_tax_valuable', '=', True)]}" />
                <field name="expense_type" attrs="{'invisible': [('type', '!=', 'in_invoice')], 'readonly': [('state', '!=', 'draft')]}" />
            </xpath>
            <field name="journal_id" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('state', '!=', 'draft')]}
                </attribute>
            </field>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="journal_id" position="move" />
            </xpath>
            <xpath expr="//field[@name='company_id']" position="before">
                <field name="invoice_user_id" position="move"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="billing_do_view_invoice_tree">
        <field name="name">billing.do.account.move.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="ncf" invisible="context.get('default_type') not in ('in_invoice', 'in_refund','in_receipt')" />
            </field>
            <field name="name" position="attributes">
                <attribute name="invisible">
                    context.get('default_type') not in ('out_invoice', 'out_refund','out_receipt')
                </attribute>
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="billing_do_view_move_reversal_form">
        <field name="name">billing.do.account.move.reversal.form</field>
        <field name="model">account.move.reversal</field>
        <field name="inherit_id" ref="account.view_account_move_reversal" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="replace">
                <field name="journal_id" attrs="{'invisible': 1}"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="billing_do_view_dgii_606_tree">
