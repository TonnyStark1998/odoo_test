                <field name="report_vat_type" />
                <field name="expense_type" />
                <field name="report_move" />
                <field name="report_move_reversed" />
                <field name="report_bill_date_month" />
                <field name="report_bill_date_day" />
                <field name="report_bill_payment_date_month" />
                <field name="report_bill_payment_date_day" />
                <field name="report_bill_service_amount" />
                <field name="report_bill_consumable_amount" />
                <field name="report_bill_total_amount" />
                <field name="report_bill_tax_amount" />
                <field name="report_bill_itbis_held_amount" />
                <field name="report_bill_itbis_proportional_amount" />
                <field name="report_bill_itbis_expense_amount" />
                <field name="report_bill_itbis_ahead_amount" />
                <field name="report_bill_itbis_purchases_amount" />
                <field name="report_bill_isr_type" />
                <field name="report_bill_isr_held_amount" />
                <field name="report_bill_isr_purchases_amount" />
                <field name="report_isc_amount" />
                <field name="report_bill_other_taxes_amount" />
                <field name="report_bill_legaltip_amount" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="billing_do_view_dgii_607_tree">
        <field name="name">billing.do.account.dgii.607.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree default_order="report_invoice_date desc" create="false" import="false">
                <field name="state" invisible="1" />
                <field name="report_vat" />
                <field name="report_vat_type" />
                <field name="report_move" />
                <field name="report_move_reversed" />
                <field name="income_type" />
                <field name="report_invoice_date" />
                <field name="report_invoice_held_date" />
                <field name="amount_untaxed_signed" />
                <field name="amount_tax_signed" />
                <field name="report_invoice_itbis_held_by_thirdparty_amount" />
                <field name="report_invoice_itbis_perceived_amount" />
                <field name="report_invoice_isr_held_by_thirdparty_amount" />
                <field name="report_invoice_isr_perceived_amount" />
                <field name="report_isc_amount" />
                <field name="report_invoice_other_taxes_amount" />
                <field name="report_invoice_legaltip_amount" />
                <field name="report_invoice_cash_amount" />
                <field name="report_invoice_bank_amount" />
                <field name="report_invoice_credit_debit_card_amount" />
                <field name="report_invoice_credit_sale_amount" />
                <field name="report_invoice_gift_amount" />
                <field name="report_invoice_permute_amount" />
                <field name="report_invoice_other_sale_way_amount" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="dgii_reports_format_606">
        <field name="name">Formato de envío de datos 606 (Compras)</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="billing_do_view_dgii_606_tree" />
        <field name="domain">['&amp;', ('type','in',['in_invoice', 'in_refund']), '&amp;', ('state','in',['posted']), ('report_move','!=','')]</field>
    </record>
    <record model="ir.actions.act_window" id="dgii_reports_format_607">
        <field name="name">Formato de envío de datos 607 (Ventas)</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="billing_do_view_dgii_607_tree" />
        <field name="domain">['&amp;', ('type','in',['out_invoice','out_refund']), ('state', 'in', ['posted'])]</field>
    </record>
    <menuitem id="main_menu_dgii_reports" name="DGII Reports" parent="account_accountant.menu_accounting" sequence="30" />
    <menuitem id="menu_dgii_reports_606" name="Formato de compras (606)" parent="main_menu_dgii_reports" action="dgii_reports_format_606" sequence="1" />
    <menuitem id="menu_dgii_reports_607" name="Formato de ventas (607)" parent="main_menu_dgii_reports" action="dgii_reports_format_607" sequence="2" />
</odoo>