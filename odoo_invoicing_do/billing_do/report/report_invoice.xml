<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="billing_do_report_invoice_document" inherit_id="account.report_invoice_document" name="billing.do.account.invoice.document.report">
        <xpath expr="//div[hasclass('page')]/h2" position="replace"/>
        <xpath expr="//div[hasclass('page')]/div[hasclass('row')]" position="replace" />
        <xpath expr="//address" position="replace" />
        <xpath expr="//div[hasclass('mt16')]" position="replace" />
        <xpath expr="//div[hasclass('page')]" position="before">
            <div class="page">
                <table class="table table-sm o_main_table" name="invoice_info_table" style="margin:2% 0 9% 0;">
                    <tbody>
                        <tr>
                            <td style="border:0;">
                                <h5 class="m-0">
                                    <strong><span t-field="o.company_id.name" /></strong>
                                </h5>
                                <p class="m-0">
                                    RNC: <span t-field="o.company_id.vat" />
                                </p>
                                <p class="m-0">
                                    Fecha: <span t-esc="o.invoice_date.strftime('%d/%m/%Y')" />
                                </p>
                            </td>
                            <td style="border:0;">
                                <div t-if="o.journal_id.sequence_id.code == 'B01' and o.type in ['out_invoice']">
                                    <h2 class="m-0">
                                        <strong>Factura de crédito fiscal</strong>
                                    </h2>
                                    <p class="m-0">
                                        NCF: 
                                        <span t-if="o.name != '/'" t-field="o.name" />
                                        <span t-if="o.name == '/'" t-field="o.ncf_sequence_next_number" />
                                    </p>
                                    <p class="m-0">
                                        Válido hasta: 
                                        <span t-if="o.ncf_date_to" t-esc="o.ncf_date_to.strftime('%d/%m/%Y')"></span>
                                        <span t-if="not o.ncf_date_to">31/12/2020</span>
                                    </p>
                                </div>
                                <div t-if="o.journal_id.sequence_id.code == 'B02'  and o.type in ['out_invoice']">
                                    <h2 class="m-0">
                                        <strong>Factura de consumo</strong>
                                    </h2>
                                    <p class="m-0">
                                        NCF: 
                                        <span t-if="o.name != '/'" t-field="o.name" />
                                        <span t-if="o.name == '/'" t-field="o.ncf_sequence_next_number" />
                                    </p>
                                </div>
                                <div t-if="o.type in ['out_refund', 'in_refund'] and o.journal_id.refund_sequence_id.code == 'B04'">
                                    <h2 class="m-0" t-if="o.type in ['out_refund']">
                                        <strong>Nota de crédito</strong>
                                    </h2>
                                    <h2 class="m-0" t-if="o.type in ['in_refund']">
                                        <strong>Nota de débito</strong>
                                    </h2>
                                    <p class="m-0">
                                        NCF: 
                                        <span t-if="o.name != '/'" t-field="o.name" />
                                        <span t-if="o.name == '/'" t-field="o.ncf_sequence_next_number" />
                                    </p>
                                    <p class="m-0 text-danger">
                                        NCF modificado: 
                                        <span t-if="o.reversed_entry_id" t-field="o.reversed_entry_id.name" />
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <hr style="height: 3px;color: #aaa;background-color: #aaa;border: 0;" />
                <div class="row" style="margin:1% 0 5% 0;">
                    <div class="col">
                        <h6 class="m-0">
                            <strong>
                                <p class="m-0" t-if="o.journal_id.sequence_id.code == 'B01'">
                                    <span>RNC:</span>
                                    <span t-if="o.partner_id" t-field="o.partner_id.vat" />
                                    <span t-if="not o.partner_id">N/D</span>
                                </p>
                                <p class="m-0">
                                    <span t-if="o.journal_id.sequence_id.code == 'B02'">Cliente:</span>
                                    <span t-if="o.journal_id.sequence_id.code == 'B01'">Razón Social:</span>
                                    <span t-field="o.partner_id.name" />
                                </p>
                            </strong>
                        </h6>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//table[@name='invoice_line_table']" position="replace">
            <table class="table table-sm o_main_table" name="invoice_line_table">
                <thead>
                    <th name="th_quantity">
                        <strong>
                            <span>Cantidad</span>
                        </strong>
                    </th>
                    <th name="th_description">
                        <strong>
                            <span>Descripción</span>
                        </strong>
                    </th>
                    <th name="th_itbis">
                        <strong>
                            <span>ITBIS</span>
                        </strong>
                    </th>
                    <th name="th_price_unit">
                        <strong>
                            <span>Valor</span>
                        </strong>
                    </th>
                    <th name="th_exemption">
                    </th>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                    <t t-foreach="lines" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                <td name="td_quantity">
                                    <span t-field="line.quantity" />
                                    <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                    <span> x </span>
                                    <span t-field="line.price_unit" />
                                </td>
                                <td name="td_description">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <td name="td_itbis">
                                    <span t-esc="round(line.price_total - line.price_subtotal, 2)" />
                                </td>
                                <td name="td_subtotal">
                                    <span t-esc="round(line.price_unit * line.quantity, 2)" />
                                </td>
                                <td name="td_exemption">
                                    <span t-if="len(line.tax_ids.filtered(lambda t: 'exento' in t.description.lower() or 'exento' in t.name.lower())) > 0">E</span>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>
        </xpath>
    </template>
</odoo>