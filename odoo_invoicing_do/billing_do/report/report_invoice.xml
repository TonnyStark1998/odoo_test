<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="billing_do_report_invoice_document" inherit_id="account.report_invoice_document" name="billing.do.account.invoice.document.report">
        <xpath expr="//div[hasclass('page')]/h2" position="replace">
            <div class="row" t-attf-style="margin-top:2%;margin-bottom:3%;">
                <div name="information_company" class="col-6 pull-left">
                    <div t-attf-class="m-0" t-attf-style="font-size:1.1em;">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <strong t-if="o.journal_id.code == 'B02'">CLIENTE</strong>
                        <strong t-if="o.journal_id.code == 'B01'">RAZÓN SOCIAL</strong>
                        <br />
                        <strong><span t-field="o.company_id.name" /></strong>
                    </div>
                    <div t-attf-class="m-0" t-attf-style="font-size:0.9em;">
                    <p class="m-0">
                        RNC: <span t-field="o.company_id.vat" />
                    </p>
                    <p class="m-0">
                        Fecha: <span t-esc="o.invoice_date.strftime('%d/%m/%Y')" />
                    </p>
                    <span t-field="o.company_id.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                    </div>
                </div>
                <div name="information_ncf" class="col-6 pull-right">
                    <div class="m-0" t-attf-style="font-size:1.6em;">
                        <strong>
                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Factura Borrador</span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Factura Cancelada</span>
                            <span t-if="o.type == 'out_invoice' and o.journal_id.code == 'B01'">Factura de crédito fiscal</span>
                            <span t-if="o.type == 'out_invoice' and o.journal_id.code == 'B02'">Factura de consumo</span>
                            <span t-if="o.type == 'out_refund'">Nota de Crédito</span>
                            <span t-if="o.type == 'in_refund'">NC de Proveedor</span>
                            <span t-if="o.type == 'in_invoice'">Factura de Proveedor</span>
                            <br/>
                        </strong>
                    </div>
                    <p class="m-0">
                        NCF: 
                        <span t-if="o.name != '/'" t-field="o.name" />
                        <span t-if="o.name == '/'" t-field="o.ncf_sequence_next_number" />
                    </p>
                    <span t-if="o.type == 'out_refund' and (o.origin != False)">
                        <p class="m-0 text-danger">
                            NCF modificado: 
                            <span t-if="o.reversed_entry_id" t-field="o.reversed_entry_id.name" />
                        </p>
                    </span>
                    <p class="m-0">
                        Válido hasta: 
                        <span t-if="o.ncf_date_to" t-esc="o.ncf_date_to.strftime('%d/%m/%Y')"></span>
                        <span t-if="not o.ncf_date_to">31/12/2020</span>
                    </p>
                </div>
                <div class="clearfix mb12"/>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('page')]/div[@id='informations']" position="replace" />
        <xpath expr="//table[@name='invoice_line_table']" position="replace">
            <table class="table table-sm o_main_table" name="invoice_line_table">
                <thead t-attf-style="background-color:#{o.company_id.report_custom_color}">
                    <th name="th_quantity">
                        <strong>
                            <span>Cantidad</span>
                        </strong>
                    </th>
                    <th name="th_description">
                        <strong>
                            <span>Descripción</span>
                        </strong>
                    </th>
                    <th name="th_itbis">
                        <strong>
                            <span>ITBIS</span>
                        </strong>
                    </th>
                    <th name="th_price_unit">
                        <strong>
                            <span>Valor</span>
                        </strong>
                    </th>
                    <th name="th_exemption">
                    </th>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                    <t t-foreach="lines" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                <td name="td_quantity">
                                    <span t-field="line.quantity" />
                                    <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                    <span> x </span>
                                    <span t-field="line.price_unit" />
                                </td>
                                <td name="td_description">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <td name="td_itbis">
                                    <span t-esc="round(line.price_total - line.price_subtotal, 2)" />
                                </td>
                                <td name="td_subtotal">
                                    <span t-esc="round(line.price_unit * line.quantity, 2)" />
                                </td>
                                <td name="td_exemption">
                                    <span t-if="len(line.tax_ids.filtered(lambda t: 'exento' in t.description.lower() or 'exento' in t.name.lower())) > 0">E</span>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>
        </xpath>
    </template>
</odoo>