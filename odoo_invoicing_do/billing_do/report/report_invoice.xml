<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="billing_do_report_invoice_document" inherit_id="account.report_invoice_document" name="billing.do.account.invoice.document.report">
        <xpath expr="//div[hasclass('page')]/h2" position="replace">
            <div t-attf-class="row" t-attf-style="padding:0px 0 6px 0;margin:5px 0 5px 0;">
                <div name="information_company" class="col-6 pull-left" style="padding-left:0 !important;">
                    <div t-attf-class="m-0" t-attf-style="font-size:1.1rem;">
                        <span t-attf-style="background-color:#{o.company_id.report_custom_background_color};color:#{o.company_id.report_custom_text_color};padding:2px;">
                          <i class="fa fa-user" aria-hidden="true"/>
                          <strong><span t-field="o.company_id.name"/></strong>
                        </span>
                    </div>
                    <div t-attf-class="m-0" t-attf-style="font-size:0.8rem;">
                        <p class="m-0">
                            <i class="fa fa-building-o" aria-hidden="true"/>
                            <strong>RNC: </strong><span t-field="o.company_id.vat"/>
                        </p>
                        <p class="m-0" style="padding:12px 0 0 0;">
                            <i class="fa fa-calendar" aria-hidden="true"/>
                            <strong>Fecha: </strong><span t-esc="o.invoice_date.strftime('%d/%m/%Y')"/>
                        </p>
                    </div>
                </div>
                <div name="information_ncf" class="col-5 offset-1 pull-right" style="padding-right:0 !important;font-size:0.8rem !important;">
                    <div class="m-0" t-attf-style="font-size:1.1rem;">
                        <strong>
                            <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Factura Borrador</span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Factura Cancelada</span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'posted'">
                              <span t-if="o.journal_id.code != 'B15'">Factura de </span>
                              <span t-if="o.journal_id.code == 'B01'">Crédito Fiscal</span>
                              <span t-if="o.journal_id.code == 'B02'">Consumo</span>
                              <span t-if="o.journal_id.code == 'B15'">Factura Gubernamental</span>
                            </span>
                            <span t-if="o.type == 'out_refund'">Nota de Crédito</span>
                            <span t-if="o.type == 'in_refund'">Nota de Crédito de Proveedor</span>
                            <span t-if="o.type == 'in_invoice'">Factura de Proveedor</span>
                        </strong>
                    </div>
                    <p class="m-0">
                        <strong>NCF: </strong>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                        <span t-if="o.name == '/'" t-field="o.ncf_sequence_next_number"/>
                    </p>
                    <span t-if="o.type == 'out_refund' and (o.reversed_entry_id != False)">
                        <p class="m-0 text-danger">
                            <strong>NCF modificado: </strong>
                            <span t-if="o.reversed_entry_id" t-field="o.reversed_entry_id.name"/>
                        </p>
                    </span>
                    <span class="m-0" t-if="o.type == 'out_invoice'  and o.journal_id.code not in ['B02','B04']">
                        <strong>Válido hasta: </strong>
                        <span t-if="o.ncf_date_to" t-esc="o.ncf_date_to.strftime('%d/%m/%Y')"/>
                        <span t-if="not o.ncf_date_to">31/12/2020</span>
                    </span>
                </div>
                <div class="clearfix mb12"/>
            </div>
            <div t-attf-class="row" t-attf-style="padding:6px 0 10px 0;margin:5px 0 5px 0;">
                <div name="information_partner" t-attf-class="col-6 pull-left" t-attf-style="font-size:0.8rem;padding-left:0 !important;">
                    <div t-attf-class="m-0" t-if="o.type in ['out_invoice', 'out_refund'] and o.state == 'posted'">
                        <i class="fa fa-building-o" aria-hidden="true"/>
                        <strong>RNC CLIENTE: </strong>
                        <span t-field="o.partner_id.vat"/>
                    </div>
                    <div t-attf-class="m-0">
                        <i class="fa fa-user" aria-hidden="true"/>
                        <strong t-if="o.journal_id.code in ['B02']">CLIENTE: </strong>
                        <strong t-if="o.journal_id.code not in ['B02']">NOMBRE O RAZÓN SOCIAL: </strong>
                        <br />
                        <span t-field="o.partner_id.name"/>
                    </div>
                </div>
                <div name="information_additional" t-attf-class="col-6 pull-right" t-attf-style="font-size:0.8rem;">
                  <p t-if="o.invoice_origin" name="invoice_origin">
                    <strong>Origen: </strong>
                    <br />
                    <span t-field="o.invoice_origin"/>
                  </p>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('page')]/div[@id='informations']" position="replace"/>
        <xpath expr="//table[@name='invoice_line_table']" position="replace">
            <table class="table table-sm o_main_table" name="invoice_line_table" t-attf-style="font-size:0.8rem;">
                <thead t-attf-style="background-color:#{o.company_id.report_custom_background_color};color:#{o.company_id.report_custom_text_color};">
                    <!-- <th name="th_line_number">
                        <strong>
                            <span>No.</span>
                        </strong>
                    </th> -->
                    <th name="th_description">
                        <strong>
                            <span>Descripción</span>
                        </strong>
                    </th>
                    <th name="th_quantity" t-attf-class="text-center">
                        <strong>
                            <span>Cantidad</span>
                        </strong>
                    </th>
                    <th name="th_price_unit" class="text-left">
                        <strong>
                            <span>Precio</span>
                        </strong>
                    </th>
                    <th name="th_discount" t-if="display_discount">
                        <strong>
                            <span>Descuento(%)</span>
                        </strong>
                    </th>
                    <th name="th_taxes" class="text-center">
                        <strong>
                            <span>Impuestos</span>
                        </strong>
                    </th>
                    <th name="th_total" class="text-right">
                        <strong>
                            <span>Valor</span>
                        </strong>
                    </th>
                    <th name="th_exemption">
                    </th>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                    <t t-set="line_number" t-value="0"/>

                    <t t-foreach="lines" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                        <t t-if="line.display_type != 'line_section'">
                            <t t-set="line_number" t-value="line_number + 1"/>
                        </t>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                <!-- <td name="account_invoice_line_name">
                                  <span t-esc="line_number"/>
                                </td> -->
                                <td name="td_description">
                                  <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <td name="td_quantity" t-attf-class="text-center">
                                  <span t-esc="'%.0f'% line.quantity"/>
                                  <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                </td>
                                <td t-attf-class="text-left">
                                  <span class="text-nowrap" t-field="line.price_unit" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                </td>
                                <td t-if="display_discount" t-attf-class="text-right">
                                  <span class="text-nowrap" t-field="line.discount"/>
                                </td>
                                <td t-attf-class="text-center">
                                  <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                </td>
                                <td class="text-right o_price_total">
                                  <span t-field="line.price_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                </td>
                                <td name="td_exemption">
                                  <span t-if="len(line.tax_ids.filtered(lambda t: 'exento' in t.description.lower() or 'exento' in t.name.lower())) &gt; 0">E</span>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>
        </xpath>
        <xpath expr="//p[contains(@t-if, 'o.type')]" position="replace"/>
        <xpath expr="//p[@name='comment']" position="replace">
          <span t-if="o.narration" name="comment">
              <strong>Comments: </strong><span t-field="o.narration"/>
          </span>
        </xpath>
        <xpath expr="//p[@name='note']" position="replace">
          <span t-if="o.fiscal_position_id.note" name="note">
              <strong>Notas: </strong><span t-field="o.fiscal_position_id.note"/>
          </span>
        </xpath>
        <xpath expr="//div[@id='total']" position="attributes">
          <attribute name="style">
            font-size:0.8rem;
          </attribute>
        </xpath>
    </template>
    <template id="billing_do_report_invoice_document_payments" inherit_id="account.report_invoice_document_with_payments" name="billing.do.account.invoice.document.payments.report">
        <xpath expr="//t[@t-if='len(payments_vals) > 0']" position="replace">
          <tr class="border-black">
              <td><strong>Monto Adeudado</strong></td>
              <td class="text-right">
                   <span t-field="o.amount_residual"/>
              </td>
          </tr>
        </xpath>
    </template>
</odoo>