<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="billing_do_report_external_layout_standard" inherit_id="web.external_layout_standard" name="billing.do.account.external.layout.standard.report">
        <xpath expr="//t[@t-call='web.address_layout']" position="replace"/>
        <xpath expr="//div[contains(@t-attf-class, 'header')]" position="replace">
            <div t-attf-class="header">
              <div t-attf-class="row mt32 mb32">
                  <div class="col-6">
                      <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 160px;" alt="Company Logo"/>
                  </div>
                  <div t-attf-class="col-6 text-right">
                      <div t-attf-class="m-0" t-attf-style="font-size:0.8rem;">
                          <i class="fa fa-user" aria-hidden="true"/>
                          <strong><span t-field="company.name"/></strong>
                      </div>
                      <div t-attf-class="m-0" t-attf-style="font-size:0.65rem;">
                        <div t-field="company.partner_id" t-options="{'widget': 'contact', 'fields': ['address'], 'no_marker': true}"/>
                      </div>
                  </div>
                  <div class="col-12 clearfix">
                    <div t-attf-style="border-bottom: 2px solid #{company.report_custom_background_color};margin-bottom:1%;"/>
                  </div>
              </div>
            </div>
        </xpath>
        <xpath expr="//div[contains(@t-attf-class, 'footer')]" position="replace">
            <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                <div class="text-center" t-attf-style="border-top: 1px solid #{company.report_custom_background_color};font-size:0.8rem;">
                    <ul class="list-inline mb4">
                        <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                            adding d-inline class fixes the problem-->
                        <li t-if="company.phone" class="list-inline-item d-inline">Teléfono: <span t-field="company.phone" widget="phone"/></li>
                        <li t-if="company.email" class="list-inline-item d-inline">Correo electrónico: <span t-field="company.email"/></li>
                        <li t-if="company.website" class="list-inline-item d-inline">Sitio Web: <span t-field="company.website"/></li>
                        <li t-if="company.vat" class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                    </ul>

                    <div name="financial_infos">
                        <span t-field="company.report_footer"/>
                    </div>

                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>