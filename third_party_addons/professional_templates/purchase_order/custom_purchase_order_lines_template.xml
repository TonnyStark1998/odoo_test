<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="custom_purchase_order_lines" name="Personal Purchase Order Data">
            <!-- Is there tax on at least one line? -->
            <t t-set="display_taxes" t-value="any([y.taxes_id for y in o.order_line])"/>
            <!-- To take care of columns when no discount -->
            <t t-set="col_span" t-value="7"/>
            <!-- common th styles -->
            <t t-set="th_style" t-value="'border-bottom: 1px solid #ddd !important;white-space:nowrap;'"/>
            <table class="table table-sm" t-attf-style="color:{{style.text_color}};">
                <thead t-attf-style="background-color:{{style.theme_color if not style.transparent else 'transparent'}} !important; page-break-inside: avoid; color:{{style.theme_txt_color if not style.transparent else style.text_color}};">
                    <tr t-attf-style="page-break-inside: avoid !important; border-bottom: 1px solid {{style.text_color}} !important;font-size:{{int(style.body_font)+2}}px;">
                        <th t-attf-style="{{th_style}}">
                            #
                        </th>
                        <th t-attf-style="{{th_style}}">
                            Descripción
                        </th>
                        <th class="text-right" t-attf-style="{{th_style}}">
                            Fecha Req.
                        </th>
                        <th class="text-right" t-attf-style="{{th_style}}">
                            Cantidad
                        </th>

                        <th class="text-right" t-attf-style="{{th_style}}">
                            Precio Unidad
                        </th>

                        <th t-if="display_taxes" class="text-center" t-attf-style="{{th_style}}">
                            Impuestos
                        </th>

                        <th class="text-center" t-attf-style="{{th_style}}">
                            Total
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tbody>
                        <t t-foreach="o.order_line" t-as="line">
                            <tr t-attf-style="background-color:{{style.odd if (line_parity in 'odd' and not style.transparent) else (not style.transparent and style.even)  or 'transparent'}}; page-break-inside: avoid !important;">
                                <td>
                                    <span t-esc="line_index + 1"/>
                                </td>
                                <td>
                                    <span t-field="line.name"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="line.date_planned"/>
                                </td>

                                <td class="text-right">
                                    <span t-field="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="product.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td t-if="display_taxes">
                                    <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                </td>

                                <td class="text-right">
                                    <span t-field="line.price_subtotal"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </tbody>
            </table>
            <div class="col-5 float-right"
                 style="padding-left:0px; padding-right:0px; page-break-inside: avoid !important;">
                <table class="table table-sm" t-attf-style="color:{{style.text_color}};">
                    <tbody>
                        <tr t-if="display_taxes" t-attf-style="border-top: 1px solid {{style.text_color}};">
                            <td t-attf-style="border-top: 1px solid {{style.text_color}} !important;">
                                <strong>Subtotal</strong>
                            </td>
                            <td class="text-right"
                                t-attf-style="border-top: 1px solid {{style.text_color}} !important;">
                                <span t-field="o.amount_untaxed"
                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr t-if="display_taxes">
                            <td>
                                <strong>Impuestos</strong>
                            </td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr t-attf-style="border-bottom: 1px solid {{style.text_color}};">
                            <td t-attf-style="border-top: 1px solid {{style.text_color}} !important;">
                                <strong>Total</strong>
                            </td>
                            <td class="text-right"
                                t-attf-style="border-top: 1px solid {{style.text_color}} !important;">
                                <strong>
                                    <span style="font-weight:bold; text-decoration:underline;"
                                          t-field="o.amount_total"/>
                                </strong>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-7 float-left"
                 style="padding-left:0px; padding-right:0px; page-break-inside: avoid ! important;">
                <p t-if="o.payment_term_id.note">
                    <span t-field="o.payment_term_id.note"/>
                </p>
                <p t-if="o.incoterm_id">
                    <span>Envío:</span>
                    <span t-field="o.incoterm_id"/>
                </p>
                <p id="payment_term" t-if="not o.payment_term_id and o.partner_id.property_payment_term_id">
                    <span t-field="o.partner_id.property_payment_term_id.note"/>
                </p>

                <p t-if="o.fiscal_position_id.note">
                    <strong>Comentario de posición fiscal:</strong>
                    <span t-field="o.fiscal_position_id.note"/>
                </p>
                <p t-if="o.notes">
                    <span t-field="o.notes"/>
                </p>
            </div>
        </template>
    </data>
</odoo>
