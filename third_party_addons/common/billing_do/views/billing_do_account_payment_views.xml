<odoo>
    <record model="ir.ui.view" id="billing_do_view_account_payment_search">
        <field name="name">billing.do.view.account.payment.search</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search" />
        <field name="arch" type="xml">
            <filter name="reconciled" position="after">
                <separator />
                <filter string="Today" name="today" domain="['&amp;', ('payment_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')), ('payment_date', '&lt;=', datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))]" />
            </filter>
        </field>
    </record>
</odoo>