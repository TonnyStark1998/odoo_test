<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="billing_do_product_template_form_view">
        <field name="name">billing.do.product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//notebook//page//group//group//field[@name='list_price']" 
                    position="replace">
                <field name="list_price" 
                    class="oe_inline"
                    widget='monetary'
                    options="{'currency_field': 'currency_id', 'field_digits': True}"
                    readonly="true"
                    groups="!billing_do.allow_editing_price_field_in_sales_and_invoice" />
                <field name="list_price" 
                    class="oe_inline"
                    widget='monetary'
                    options="{'currency_field': 'currency_id', 'field_digits': True}"
                    readonly="false"
                    groups="billing_do.allow_editing_price_field_in_sales_and_invoice" />
            </xpath>
        </field>
    </record>
</odoo>