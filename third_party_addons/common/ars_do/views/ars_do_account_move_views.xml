<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="ars_do_account_move_view_tree">
        <field name="name">ars.do.account.move.view.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//label[@for='partner_id' and position()=1]" position="before">
                <field name="healthcare_invoice" 
                        widget="radio" 
                        attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])],
                            'readonly': [('posted_before', '=', True)]}" />
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="healthcare_provider"
                        attrs="{'invisible': ['|', '|', ('move_type', 'not in', ['out_invoice', 'out_refund']),
                                                        ('healthcare_invoice', '=', 'not_healthcare_invoice'),
                                                        ('partner_id', '=', False)]}"
                        readonly="1"
                        force_save="1" />
                <field name="healthcare_plan"
                        attrs="{'invisible': ['|', '|', ('move_type', 'not in', ['out_invoice', 'out_refund']),
                                                        ('healthcare_invoice', '=', 'not_healthcare_invoice'),
                                                        ('partner_id', '=', False)]}"
                        readonly="1"
                        force_save="1" />
                <field name="healthcare_card"
                        attrs="{'invisible': ['|', '|', ('move_type', 'not in', ['out_invoice', 'out_refund']),
                                                        ('healthcare_invoice', '=', 'not_healthcare_invoice'),
                                                        ('partner_id', '=', False)]}"
                        readonly="1"
                        force_save="1" />
                <field name="healthcare_authorization_number"
                        attrs="{'required': [('healthcare_invoice', '=', 'healthcare_invoice')], 
                                'invisible': ['|', '|', ('move_type', 'not in', ['out_invoice', 'out_refund']),
                                                        ('healthcare_invoice', '=', 'not_healthcare_invoice'),
                                                        ('partner_id', '=', False)]}" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                <field name="healthcare_invoice"
                        invisible="1" />
                <field name="coverage" 
                        optional="show"
                        attrs="{'required': [('healthcare_invoice', '=', 'healthcare_invoice'),
                                ('parent.move_type', 'in', ['out_invoice', 'out_refund'])],
                            'column_invisible': [('parent.move_type', 'not in', ['out_invoice', 'out_refund'])]}" />
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_type']" position="after">
                <field name="healthcare_invoice" 
                        invisible="1" />
                <field name="coverage" 
                        invisible="1" 
                        required="0" />
            </xpath>
            <field name="tax_totals" position="after">
                <field name="amount_coverage" 
                    attrs="{'invisible': [('amount_coverage', '&#60;=', 0)]}" />
            </field>
        </field>
    </record>
</odoo>