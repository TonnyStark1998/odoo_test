<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="purchase_order">
            <t t-call="web.report_layout">
                <t t-foreach="docs" t-as="purchase">
                    <t t-set="purchase" t-value="purchase.with_context({'lang':purchase.partner_id.lang})" />
                    <t t-set="style" t-value="purchase.po_style or purchase.partner_id.style or res_company.style or user.env.ref('professional_templates.df_style_for_all_reports')"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_0_document'" t-call="professional_templates.PO_0_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_1_document'" t-call="professional_templates.PO_1_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_2_document'" t-call="professional_templates.PO_2_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_3_document'" t-call="professional_templates.PO_3_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_4_document'" t-call="professional_templates.PO_4_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_5_document'" t-call="professional_templates.PO_5_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_6_document'" t-call="professional_templates.PO_6_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_7_document'" t-call="professional_templates.PO_7_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_8_document'" t-call="professional_templates.PO_8_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_9_document'" t-call="professional_templates.PO_9_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_10_document'" t-call="professional_templates.PO_10_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_11_document'" t-call="professional_templates.PO_11_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_13_document'" t-call="professional_templates.PO_13_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_14_document'" t-call="professional_templates.PO_14_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="style.template_po.key == 'professional_templates.PO_15_document'" t-call="professional_templates.PO_15_document" t-lang="purchase.partner_id.lang"/>
                    <t t-if="not style" t-call="purchase.report_purchaseorder_document" t-lang="purchase.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
