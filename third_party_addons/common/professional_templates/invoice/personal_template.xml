<?xml version="1.0"?>
<odoo>
    <data>
        <template name="Personal Template" id="INVOICE_15_document">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <t t-if="o and 'style' in o" t-set="style" t-value="o.style" />
            <t t-if="o and not 'style' in o" t-set="style" t-value="company.style" />
            <div t-attf-style="padding-bottom:0px;
                                padding-left:0px;
                                padding-right:0px;
                                color:{{style.text_color}} !important;
                                font-size:{{int(style.header_font)}}px !important;
                                font-family:{{style.font_family}} !important;"
                class="container mb-2">
                <div t-if="style.header" class="row">
                    <div class="col-6 mt-2" style="padding-left:0px;">
                        <div class="row">
                            <div class="col">
                                <img t-if="style.logo"
                                    t-att-src="image_data_uri(o.style.logo)"
                                    alt="Company Logo"/>
                                <img t-if="not style.logo and company.logo"
                                    t-att-src="image_data_uri(company.logo)"
                                    alt="Company Logo"/>
                            </div>
                        </div>
                        <div class="row">
                            <div t-if="company.vat" class="col">
                                RNC:
                                <span t-field="company.vat"/>
                            </div>
                        </div>
                        <div class="row">
                            <div t-if="o.invoice_date" class="col">
                                Fecha:
                                <span t-field="o.invoice_date"/>
                            </div>
                        </div>
                    </div>
                    <div t-if="company.twitter or company.facebook or company.youtube"
                        t-attf-style="background-color: {{o.style.theme_color}};
                            width:auto;
                            padding-left:15px; 
                            color:{{o.style.theme_txt_color}}; 
                            padding-right:15px; 
                            padding-top:4px; 
                            padding-bottom:2px;"
                        class="col-auto mb-8">
                        <span t-if="company.twitter" 
                            style="padding-left:0px;" 
                            class="fa fa-twitter-square "/>&#160;
                        <span t-field="company.twitter"/>
                        <span t-if="company.facebook" 
                            style="padding-left:13px;" 
                            class="fa fa-facebook-square "/>&#160;
                        <span t-field="company.facebook"/>
                        <span t-if="company.youtube" 
                            style="padding-left:13px;" 
                            class="fa fa-youtube-square "/>&#160;
                        <span t-field="company.youtube"/>
                    </div>
                    <div class="col-auto mb-8"
                        style="font-size:12px !important; padding-bottom:2px;padding-right:0px;">
                        <h1 t-attf-style="color: {{o.style.name_color}}">FACTURA</h1>
                        <div t-if="company.email">
                            <span class="fa fa-envelope-square fa-lg"/> 
                            <span t-field="company.email"/>
                        </div>
                        <div t-if="company.website">
                            <span class="fa fa-globe fa-lg"/> 
                            <span t-field="company.website"/>
                        </div>
                    </div>
                </div>
            </div>
            <!--end of Header-->
            <!-- START OF PAGE -->
            <div class="page" 
                t-attf-data-oe-model="account.move" 
                t-attf-data-oe-id="{{o.id}}"
                t-attf-style="margin-top:4px; padding-top:5px; padding-left:0px; padding-right:0px; color:{{o.style.text_color}} !important;">
                <!--  Start of INVOICE HEADER    -->
                <div class="container mb-4" 
                    style="padding-left:0px; padding-right:0px; padding-bottom:2px;">
                    <div class="row">
                        <!--start of wrapper -->
                        <div class="col pull-left"
                            t-attf-style="font-size:{{int(o.style.body_font)}}px !important;padding-left:0px;">
                            <div t-attf-style="background-color:{{o.style.theme_color}}; padding-top:2px; padding-bottom:2px; color:{{o.style.theme_txt_color}};">
                                <span style="font-size:16px;">
                                    <span class="fa fa-user fa-lg"/>
                                    Cliente
                                </span>
                            </div>
                            <h5 t-if="o.partner_id"
                                t-attf-style="color:{{o.style.cust_color}}; margin-top:2px; margin-bottom:5px; margin-left:0px;">
                                <span t-if="o.partner_id.title" t-field="o.partner_id.title"/>
                                <span t-field="o.partner_id"/>
                            </h5>
                            <div t-if="o.partner_id.vat">
                                <span class="fa fa-building fa-lg"/>
                                RNC:
                                <span t-field="o.partner_id.vat"/>
                            </div>
                            <div>
                                <span t-if="o.partner_id.street" class="fa fa-map-marker fa-lg"/>
                                <span t-if="o.partner_id.street" t-field="o.partner_id.street"/>
                                <span t-if="o.partner_id.street and o.partner_id.street2 ">,</span>
                                <span t-if="o.partner_id.street2" t-field="o.partner_id.street2"/>
                                <span t-if="o.partner_id.zip and o.partner_id.street or o.partner_id.street2 ">,</span>
                                <span t-if="o.partner_id.zip ">
                                    ZIP:
                                    <span t-field="o.partner_id.zip"/>
                                </span>
                                <span t-if="o.partner_id.zip and o.partner_id.city">,</span>
                                <span t-if="o.partner_id.city or o.partner_id.country_id" t-field="o.partner_id.city"/>
                                <span t-if="o.partner_id.country_id and o.partner_id.city ">,</span>
                                <span t-field="o.partner_id.country_id"/>
                            </div>
                            <div t-if="o.partner_id.phone or o.partner_id.mobile">
                                <span class="fa fa-phone-square fa-lg"/>
                                <span t-field="o.partner_id.phone"/>
                                <span t-if="o.partner_id.mobile and o.partner_id.phone ">,</span>
                                <span t-field="o.partner_id.mobile"/>
                            </div>
                            <div t-if="o.partner_id.email">
                                <span class="fa fa-envelope-square fa-lg"/>
                                <span t-field="o.partner_id.email"/>
                            </div>
                            <div t-if="o.partner_id.website">
                                <span class="fa fa-globe fa-lg"/>
                                <span t-field="o.partner_id.website"/>
                            </div>
                        </div>
                        <div class="col mb4 pull-right"
                            t-attf-style="border:2px solid {{o.style.theme_color}}; color:#222;">
                            <t t-if="o.ncf_date_to">
                                <t t-set="ncf_date_due" t-value="o.ncf_date_to"/>
                            </t>
                            <t t-if="not o.ncf_date_to">
                                <t t-set="ncf_date_due" t-value="'31/12/%s' % datetime.date.today().strftime('%Y')"/>
                            </t>
                            <h5>
                                <strong>
                                    <span t-if="o.move_type == 'out_invoice' and (o.state == 'posted' or o.invoice_payment_state == 'paid')"
                                        t-field="o.ncf_type.display_name">
                                    </span>
                                    <span t-if="o.move_type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                                    <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Factura Borrador</span>
                                    <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Factura Cancelada</span>
                                    <span t-if="o.move_type == 'out_refund'">Nota de crédito</span>
                                    <span t-if="o.move_type == 'in_refund'">Nota de crédito proveedor</span>
                                    <span t-if="o.move_type == 'in_invoice'">Factura de compra</span>
                                </strong>
                            </h5>
                            <p>
                                <strong>
                                    <span t-field="o.name" 
                                        t-if="o.move_type in ['out_invoice', 'out_refund', 'enrty'] 
                                            or (o.move_type in ['in_invoice', 'in_refund'] 
                                            and o.ncf_type_code in ['B11', 'B13'])" />
                                    <span t-field="o.ncf" 
                                        t-if="o.move_type in ['in_invoice', 'in_refund'] 
                                            and o.ncf_type_code not in ['B11', 'B13', 'B17']" />
                                </strong>
                            </p>
                            <div t-if="ncf_date_due">
                                Vencimiento secuencia:
                                <span t-esc="ncf_date_due.strftime('%d/%m/%Y')"/>
                            </div>
                            <div>
                                Términos de pago:
                                <span t-if="o.invoice_payment_term_id" t-field="o.invoice_payment_term_id"/>
                                <span t-if="not o.invoice_payment_term_id" t-field="o.invoice_date_due"/>
                            </div>
                        </div>
                    </div>
                </div>
                <!--    End of INVOICE HEADER   -->
                <!--    Start of INVOICE LINES  -->
                <div class="col-12 mt8 mb9"
                        t-attf-style="padding-left:0px; 
                                    padding-right:0px;
                                    font-size:12px !important;"
                        t-if="o.invoice_line_ids">
                    
                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount"
                        t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount"
                        t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <table class="table table-condensed" 
                            t-attf-style="color:{{o.style.text_color}};">

                        <thead t-attf-style="background-color:{{o.style.theme_color}};
                                                page-break-inside: avoid;
                                                color:{{o.style.theme_txt_color}};">

                            <tr t-attf-style="page-break-inside: avoid !important;
                                                border-bottom: 1px solid {{o.style.text_color}} !important;">

                                <th t-attf-style="border-bottom: 1px solid {{o.style.text_color}} !important;">
                                    No.
                                </th>
                                <th class="text-right"
                                    t-attf-style="border-bottom: 1px solid {{o.style.text_color}} !important;">
                                    Cantidad
                                </th>
                                <th t-attf-style="border-bottom: 1px solid {{o.style.text_color}} !important;">
                                    Descripción
                                </th>
                                <th class="text-right"
                                    t-attf-style="border-bottom: 1px solid {{o.style.text_color}} !important;">
                                    Precio Unitario
                                </th>
                                <th class="text-right"
                                    t-attf-style="border-bottom: 1px solid {{o.style.text_color}} !important;"
                                    t-if="display_discount">
                                    Descuento
                                </th>
                                <th class="text-right"
                                    t-attf-style="border-bottom: 1px solid {{o.style.text_color}} !important;">
                                    Impuestos
                                </th>
                                <th class="text-right"
                                    t-attf-style="border-bottom: 1px solid {{o.style.text_color}} !important;">
                                    Monto
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="line_number" 
                                t-value="0" />
                            <t t-set="line_number_section" 
                                t-value="1" />

                            <t t-foreach="o.invoice_line_ids.sorted(key=lambda line: line.sequence)" t-as="l">
                                <t t-if="l.display_type not in ['line_section', 'line_note']" 
                                    t-set="line_number" 
                                    t-value="line_number + 1" />
                                <t t-if="l.display_type in ['line_section']" 
                                    t-set="line_number_section" 
                                    t-value="1" />
                                <t t-if="l.display_type not in ['line_section']" 
                                    t-set="line_number_section" 
                                    t-value="line_number_section + 1" />

                                <tr t-if="l.display_type in ['line_section']"
                                    t-attf-style="background-color:#bdbdbd !important;
                                                    color:#ffffff !important;
                                                    page-break-inside: avoid !important;">
                                    <td colspan="7">
                                        <span t-field="l.name"/>
                                    </td>
                                </tr>

                                <tr t-if="l.display_type in ['line_note']"
                                    t-attf-style="background-color:#f4f3f3;
                                                    color: #555555;
                                                    font-size: 9px;
                                                    font-style: italic;
                                                    page-break-inside: avoid !important;">
                                    <td colspan="7"
                                        class="text-center">
                                        <span t-field="l.name"/>
                                    </td>
                                </tr>

                                <tr t-if="l.display_type not in ['line_section' , 'line_note']"
                                    t-attf-style="background-color:{{o.style.odd if line_number_section % 2 != 0 else o.style.even}};
                                                    page-break-inside: avoid !important;">
                                    <td>
                                        <span t-esc="line_number"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="int(l.quantity)"/>
                                        <br />
                                        <span t-field="l.product_uom_id" />
                                    </td>
                                    <td>
                                        <span t-field="l.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td class="text-right"
                                        t-if="display_discount">
                                        <span t-field="l.discount"
                                                 t-if="l.discount > 0" />
                                        <span t-if="l.discount > 0"> %</span>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.name), l.tax_ids))" />
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_subtotal"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <!--    End of INVOICE LINES    -->
                <!--    Start of TOTALS -->
                <div class="container mt-2"
                     t-attf-style="padding-left:0px; padding-right:0px;font-size:12px !important;">
                    <div class="row"
                         style="padding-left:0px; padding-right:0px; page-break-inside: avoid !important;">
                        <div class=" offset-7 col-5">
                            <table class="table table-sm" t-attf-style="color:{{o.style.text_color}};">
                                <tbody>
                                    <tr t-attf-style="border-top: 1px solid {{o.style.text_color}};">
                                        <td t-attf-style="border-top: 1px solid {{o.style.text_color}} !important;">
                                            <strong>Subtotal</strong>
                                        </td>
                                        <td class="text-right"
                                            t-attf-style="border-top: 1px solid {{o.style.text_color}} !important;">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>ITBIS</td>
                                        <td class="text-right">
                                            <span t-field="o.amount_tax"/>
                                        </td>
                                    </tr>
                                    <tr t-attf-style="border-bottom: 1px solid {{o.style.text_color}};">
                                        <td t-attf-style="border-top: 1px solid {{o.style.text_color}} !important;">
                                            <strong>Total</strong>
                                        </td>
                                        <td class="text-right"
                                            t-attf-style="border-top: 1px solid {{o.style.text_color}} !important;">
                                            <strong>
                                                <span style="font-weight:bold; text-decoration:underline;"
                                                    t-field="o.amount_total"/>
                                            </strong>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--    Start of PAYMENTS   -->
                <t t-if="print_with_payments">
                    <t t-if="o.payment_state != 'invoicing_legacy'">
                        <t t-set="payments_vals" t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                        <t t-foreach="payments_vals" t-as="payment_vals">
                            <tr t-if="payment_vals['is_exchange'] == 0">
                                <td>
                                    <i class="oe_form_field text-end oe_payment_label">Pago en 
                                    <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                                </td>
                                <td class="text-end">
                                    <span t-esc="payment_vals['amount']" 
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </t>
                        <t t-if="len(payments_vals) > 0">
                            <tr>
                                <td><strong>Monto Adeudado</strong></td>
                                <td class="text-end">
                                    <span t-field="o.amount_residual"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </t>
                <!--    End of PAYMENTS     -->
                <div t-if="o.invoice_origin" class="col-12"
                     style="margin-top:10px; padding-left:0px; padding-right:0px; page-break-inside: avoid ! important;">
                    <p>
                        <strong>Origen:</strong>
                        <span t-field="o.invoice_origin"/>
                    </p>
                    <p t-if="o.fiscal_position_id.note">
                        <strong>Fiscal Position Remark:</strong>
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                    <br/>
                    <br/>
                </div>
                <div t-if="o.narration"
                        class="col-12"
                        style="margin-top:10px;
                                padding-left:0px;
                                padding-right:0px;
                                page-break-inside: avoid ! important;">
                    <p>
                        <strong>Nota(s):</strong>
                        <span t-field="o.narration"/>
                    </p>
                </div>
            </div>
            <!--End of PAGE-->
            <!-- Start of FOOTER -->
            <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                <div class="text-center" style="border-top: 1px solid black;">
                    <ul class="list-inline">
                        <li t-if="company.partner_id" class="list-inline-item d-inline">
                            <span t-if="o.company_id.street" class="fa fa-map-marker fa-lg"/>
                            <span t-if="o.company_id.street" t-field="o.company_id.street"/>
                            <span t-if="o.company_id.street and o.company_id.street2 ">,</span>
                            <span t-if="o.company_id.street2" t-field="o.company_id.street2"/>
                            <span t-if="o.company_id.zip and o.company_id.street or o.company_id.street2 ">,
                            </span>
                            <span t-if="o.company_id.zip">
                                ZIP:
                                <span t-field="o.company_id.zip"/>
                            </span>
                            <span t-if="o.company_id.zip and o.company_id.city">,</span>
                            <span t-if="o.company_id.city or o.company_id.country_id"
                                  t-field="o.company_id.city"/>
                            <span t-if="o.company_id.country_id and o.company_id.city ">,</span>
                            <span t-field="o.company_id.country_id"/>
                        </li>
                    </ul>
                    <ul class="list-inline">
                        <li t-if="company.phone" class="list-inline-item d-inline">
                            <span class="fa fa-phone"/>
                            <span class="o_force_ltr" t-field="company.phone"/>

                        </li>
                        <li t-if="company.email" class="list-inline-item d-inline">
                            <span class="fa fa-envelope"/>
                            <span class="o_force_ltr" t-field="company.email"/>
                        </li>
                        <li t-if="company.website" class="list-inline-item d-inline">
                            <span class="fa fa-globe"/>
                            <span class="o_force_ltr" t-field="company.website"/>
                        </li>
                    </ul>

                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Página:
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </div>
            <!--End of FOOTER-->
        </template>
    </data>
</odoo>