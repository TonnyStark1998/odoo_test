<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="modern_report_saleorder_document">
      <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
      </t>
      <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
      </t>
      <div class="header">
        <div class="row mt32 mb32">
          <div class="col-6">
            <img t-attf-src="image_data_uri(doc.company_id.logo)" />
          </div>
          <div class="col-6 text-right">
            <strong>
                <span t-field="doc.company_id.name" />
            </strong>
            <br/>
            <span t-field="doc.company_id.street" />
            <br/>
            <span t-field="doc.company_id.city" />
            <br/>
            <span t-field="doc.company_id.country_id" />
            <br/>
            <span t-field="doc.company_id.vat" />
            <br/>
          </div>
        </div>
      </div>
      <t t-call="web.html_container"/>
      <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.company_id.partner_id.lang})" />
        <div class="page">
          <div class="oe_structure"/>

          <table class="table table-sm" style="table-layout:fixed;" >
            <thead>
              <tr>
                <th width="30px" t-attf-style="background-color:#{doc.company_id.report_custom_background_color} !important; border: 1px solid #fff !important; color:#{doc.company_id.report_custom_text_color} !important;">Cliente</th>
                <th width="30px" t-attf-style="background-color:#{doc.company_id.report_custom_background_color} !important;border: 1px solid #fff !important; color:#{doc.company_id.report_custom_text_color} !important; ">Dirección de facturación y envío</th>
                <th width="20px" t-attf-style="background-color:#{doc.company_id.report_custom_background_color} !important;border: 1px !important; border:1px solid #fff !important; color:#{doc.company_id.report_custom_text_color} !important; ">Fecha Cotización</th>
                <th width="20px" t-attf-style="background-color:#{doc.company_id.report_custom_background_color} !important;border: 1px !important; border:1px solid #fff !important; color:#{doc.company_id.report_custom_text_color} !important; ">Cotización #</th>
              </tr>
            </thead>
            <tbody class="sale_tbody">
              <tr t-attf-style="border-bottom:1px solid #bbb !important;">
                <td style="border: 1px solid #fff !important;">
                  <div t-field="doc.partner_id"/>
                  <t t-if="doc.partner_id.street">
                    <t t-esc="doc.partner_id.street"/>
                  </t>
                  <br/>
                  <t t-if="doc.partner_id.street2">
                    <t t-esc="doc.partner_id.street2"/>
                  </t>
                  <br/>
                  <t t-if="doc.partner_id.city">
                    <t t-esc="doc.partner_id.city"/>
                  </t>
                  <br/>
                  <t t-if="doc.partner_id.state_id.name">
                    <t t-esc="doc.partner_id.state_id.name"/>
                  </t>
                  <br/>
                  <t t-if="doc.partner_id.country_id.name">
                    <t t-esc="doc.partner_id.country_id.name"/>
                  </t>
                  <br/>
                  <t t-if="doc.partner_id.zip">
                    <t t-esc="doc.partner_id.zip"/>
                  </t>
                  <br/>
                  <div t-field="doc.partner_id.vat"/>
                </td>
                <td style="border: 1px solid #fff !important;">
                  <div t-field="doc.partner_invoice_id"/>
                  <t t-if="doc.partner_invoice_id.street">
                    <t t-esc="doc.partner_invoice_id.street"/>
                  </t>
                  <br/>
                  <t t-if="doc.partner_invoice_id.street2">
                    <t t-esc="doc.partner_invoice_id.street2"/>
                  </t>
                  <br/>
                  <t t-if="doc.partner_invoice_id.city">
                    <t t-esc="doc.partner_invoice_id.city"/>
                  </t>
                  <t t-if="doc.partner_invoice_id.state_id">
                    <t t-esc="doc.partner_invoice_id.state_id.name"/>
                  </t>
                  <br/>
                  <t t-if="doc.partner_invoice_id.country_id">
                    <t t-esc="doc.partner_invoice_id.country_id.name"/>
                  </t>
                  <br/>
                  <t t-if="doc.partner_invoice_id.zip">
                    <t t-esc="doc.partner_invoice_id.zip"/>
                  </t>
                  <br/>
                  <div t-field="doc.partner_invoice_id.vat"/>
                </td>
                <td style="border: 1px solid #fff !important;">
                  <span t-field="doc.date_order"/>
                </td>
                <td style="border: 1px solid #fff !important;">
                  <strong>
                    <span t-field="doc.name"/>
                  </strong>
                </td>
              </tr>
            </tbody>
          </table>
          <!-- Is there a discount on at least one line? -->
          <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

          <table class="table table-sm">
            <thead>
              <tr>
                <th t-attf-style="background-color:#{doc.company_id.report_custom_background_color} !important;color:#{doc.company_id.report_custom_text_color} !important; border: 1px solid #fff !important;">Descripción</th>
                <th t-attf-style="background-color:#{doc.company_id.report_custom_background_color} !important;color:#{doc.company_id.report_custom_text_color} !important; border: 1px solid #fff !important;" class="text-right">Cantidad</th>
                <th t-attf-style="background-color:#{doc.company_id.report_custom_background_color} !important;color:#{doc.company_id.report_custom_text_color} !important; border: 1px solid #fff !important;" class="text-right">Precio Unitario</th>
                <th t-attf-style="background-color:#{doc.company_id.report_custom_background_color} !important;color:#{doc.company_id.report_custom_text_color} !important; border: 1px solid #fff !important;" t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Desc.(%)</th>
                <th t-attf-style="background-color:#{doc.company_id.report_custom_background_color} !important;color:#{doc.company_id.report_custom_text_color} !important; border: 1px solid #fff !important;" class="text-right">Impuestos</th>
                <th t-attf-style="background-color:#{doc.company_id.report_custom_background_color} !important;color:#{doc.company_id.report_custom_text_color} !important; border: 1px solid #fff !important;" class="text-right">Precio</th>
              </tr>
            </thead>
            <tbody class="sale_tbody">
              <t t-foreach="doc.order_line" t-as="l">
                <tr t-if="l.product_uom_qty">
                  <td t-attf-style="border: 1px solid #fff !important;">
                    <span t-field="l.name"/>
                  </td>
                  <td class="text-right" t-attf-style="border: 1px solid #fff !important;">
                    <span t-field="l.product_uom_qty"/>
                    <span groups="product.group_uom" t-field="l.product_uom"/>
                  </td>
                  <td class="text-right" t-attf-style="border: 1px solid #fff !important;">
                    <span t-field="l.price_unit"/>
                  </td>
                  <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line" t-attf-style="border: 1px solid #fff !important;">
                    <span t-field="l.discount"/>
                  </td>
                  <td class="text-right" t-attf-style="border: 1px solid #fff !important;">
                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                  </td>
                  <td class="text-right" t-attf-style="border: 1px solid #fff !important;">
                    <span t-field="l.price_subtotal"
                        t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                  </td>
                </tr>
              </t>
            </tbody>
          </table>

          <div name="total">
            <div class="col-xs-4 pull-right">
              <table class="table table-condensed">
                <tr class="border-black">
                  <td>
                    <strong>Total sin impuestos</strong>
                  </td>
                  <td class="text-right">
                    <span t-field="doc.amount_untaxed"
                        t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                  </td>
                </tr>
                <tr>
                  <td>Impuestos</td>
                  <td class="text-right">
                    <span t-field="doc.amount_tax"
                        t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                  </td>
                </tr>
                <tr class="border-black">
                  <td t-attf-style="background-color:#{doc.company_id.report_custom_background_color} !important;color:#{doc.company_id.report_custom_text_color} !important;">
                    <strong>Total</strong>
                  </td>
                  <td t-attf-style="background-color:#{doc.company_id.report_custom_background_color} !important;color:#{doc.company_id.report_custom_text_color} !important;" class="text-right">
                    <span t-field="doc.amount_total"
                        t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                  </td>
                </tr>
              </table>
            </div>
          </div>
          <br/>
          <br/>
          <br/>
          <br/>
          <br/>
          <br/>
          <br/>
          <br/>
          <div style=" background-color: #{doc.company_id.report_custom_text_color}; color:#{doc.company_id.report_custom_text_color} !important; font:15px lucida-console,sans-serif !important; ">
            <p t-if="doc.note">
              <strong>
                <span>Nota(s):</span>
              </strong>
              <span t-field="doc.note" />
            </p>
          </div>
          <div style=" background-color: #{doc.company_id.report_custom_text_color}; color:#{doc.company_id.report_custom_text_color} !important; font:15px lucida-console,sans-serif !important;">
            <p t-if="doc.payment_term_id ">
              <strong>
                <span>Plazo de pago:</span>
              </strong>
              <span t-field="doc.payment_term_id"/>
            </p>
          </div>
          <div class="oe_structure"/>
        </div>
      </t>
    </template>
  </data>
</odoo>
