<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="fm_customization_view_stock_quant_products_availability_tree">
        <field name="name">stock.quant.products.availability.tree</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <tree create="false"
                edit="false"
                delete="false"
                import="false"
                export_xlsx="false">
                <field name="name" />
                <field name="qty_available" string="Quantity On Hand" />
                <field name="owner_id" string="Owner" />
                <groupby name="owner_id">
                    <field name="name"/>
                </groupby>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_stock_quant_products_availability_tree" model="ir.actions.server">
        <field name="name">Products Availability</field>
        <field name="model_id" ref="model_stock_picking"/>
        <field name="state">code</field>
        <field name="code">action =  env.get('stock.quant').action_get_products_by_company()</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_stock_picking_quant_availability_tree" 
        name="Products Availability" 
        parent="stock.menu_warehouse_report" 
        action="action_stock_picking_quant_availability_tree"
        sequence="300" />
</odoo>