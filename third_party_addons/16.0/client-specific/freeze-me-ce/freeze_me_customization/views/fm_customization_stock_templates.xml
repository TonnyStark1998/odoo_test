<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="stock_products_availability" name="Stock Products Availability">
        <t t-call="website.layout">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h1>Stock Locations Availability</h1>
                    </div>
                    <t t-if="products">
                        <table class="col-12 table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Product</th>
                                    <th>Availability</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="products" t-as="product">
                                    <tr>
                                        <td><t t-esc="product.id" /></td>
                                        <td><t t-esc="product.name" /></td>
                                        <td>
                                            <t t-if="product.qty_available and product.qty_available > 0" 
                                                t-esc="product.qty_available" />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>