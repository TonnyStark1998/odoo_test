<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="billing_do_view_move_form">
        <field name="name">billing.do.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type' and position()=1]" position="replace" />
            <xpath expr="//span[hasclass('o_form_label') and @attrs]" position="replace" />
            <xpath expr="//field[@name='invoice_sequence_number_next_prefix' and position()=1]" position="replace" />
            <xpath expr="//field[@name='invoice_sequence_number_next' and position()=1]" position="replace" />
            <xpath expr="//h1[hasclass('mt0')]" position="replace">
                <span class="o_form_label" attrs="{'invisible': ['|', ('type', '=', 'entry'), '|', ('name', '=', '/'), ('type','=','in_invoice')]}">
                    <field name="type" readonly="1" nolabel="1"/>
                </span>
                <h2 class="mt0" style="color:#474747;">
                    <field name="name" readonly="True" attrs="{'invisible':['|', ('name', '=', '/'), ('type','=','in_invoice')]}"/>
                    <field name="ncf_sequence_next_number" readonly="True" attrs="{'invisible':['|', ('type', '=', 'in_invoice'), '|', ('state','!=','draft'), ('name','!=','/')]}" />
                </h2>
            </xpath>
            <xpath expr="//field[@name='ref']" position="before">
                <field name="income_type" attrs="{'invisible': [('type', '!=', 'out_invoice')]}" />
                <field name="ncf" attrs="{'invisible': [('type', '!=', 'in_invoice')], 'required': [('type', '=', 'in_invoice')]}" />
                <field name="expense_type" attrs="{'invisible': [('type', '!=', 'in_invoice')]}" />
            </xpath>
            <field name="journal_id" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('state', '!=', 'draft')]}
                </attribute>
            </field>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="journal_id" position="move" />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="billing_do_view_move_reversal_form">
        <field name="name">billing.do.account.move.reversal.form</field>
        <field name="model">account.move.reversal</field>
        <field name="inherit_id" ref="account.view_account_move_reversal" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="replace">
                <field name="journal_id" attrs="{'invisible': 1}"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="billing_do_view_dgii_606_tree">
        <field name="name">billing.do.account.dgii.606.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree default_order="invoice_date desc" create="false" import="false">
                <field name="state" invisible="1" />
                <field name="report_vat" />
                <field name="report_vat_type" />
                <field name="expense_type" string="Expense Type" />
                <field name="ncf" string="Tax Receipt Number" />
                <field name="report_reversed_move" string="Tax Receipt Reversed Number" />
                <field name="report_invoice_date_month" string="Invoice Date Month" />
                <field name="report_invoice_date_day" string="Invoice Date Day" />
                <field name="report_payment_date_month" string="Payment Date Month" />
                <field name="report_payment_date_day" string="Payment Date Day" />
                <field name="report_service_amount" />
                <field name="report_consumable_amount" />
                <field name="report_total_amount" />
                <field name="amount_tax" string="ITBIS Tax" />
                <field name="report_itbis_billed_amount" />
                <field name="report_itbis_held_amount" />
                <field name="report_itbis_proportional_amount" />
                <field name="report_itbis_expense_amount" />
                <field name="report_itbis_ahead_amount" />
                <field name="report_itbis_purchases_amount" />
                <field name="report_isr_type" />
                <field name="report_isr_held_amount" />
                <field name="report_isr_purchases_amount" />
                <field name="report_isc_amount" />
                <field name="report_other_taxes_amount" />
                <field name="report_legaltip_amount" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="billing_do_view_dgii_607_tree">
        <field name="name">billing.do.account.dgii.607.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree default_order="invoice_date desc" create="false" import="false">
                <field name="state" invisible="1" />
                <field name="report_vat" />
                <field name="report_vat_type" />
                <field name="income_type" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="dgii_reports_format_606">
        <field name="name">Formato de envío de datos 606 (Compras)</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="billing_do_view_dgii_606_tree" />
        <field name="domain">['&amp;', ('type','in',['in_invoice']), ('state','in',['posted'])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first course</p>
        </field>
    </record>
    <record model="ir.actions.act_window" id="dgii_reports_format_607">
        <field name="name">Formato de envío de datos 607 (Ventas)</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="billing_do_view_dgii_607_tree" />
        <field name="domain">['&amp;', ('type','in',['out_invoice']), ('state', 'in', ['posted'])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first course</p>
        </field>
    </record>
    <menuitem id="main_menu_dgii_reports" name="DGII Reports" parent="account_accountant.menu_accounting" sequence="30" />
    <menuitem id="menu_dgii_reports_606" name="Formato de compras (606)" parent="main_menu_dgii_reports" action="dgii_reports_format_606" sequence="1" />
    <menuitem id="menu_dgii_reports_607" name="Formato de ventas (607)" parent="main_menu_dgii_reports" action="dgii_reports_format_607" sequence="2" />
</odoo>