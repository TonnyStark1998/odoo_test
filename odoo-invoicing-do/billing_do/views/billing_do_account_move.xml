<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="billing_do_view_move_form">
        <field name="name">billing.do.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//h1[hasclass('mt0')]" position="replace">
                <h2 class="mt0" style="color:#474747;">
                    <field name="name" readonly="True" attrs="{'invisible':[('name', '=', '/')]}"/>
                    <field name="ncf_sequence_next_number" readonly="True" attrs="{'invisible':['|', ('type', '=', 'in_invoice'), ('state','!=','draft')]}" />
                </h2>
            </xpath>
            <xpath expr="//field[@name='ref']" position="before">
                <field name="income_type" attrs="{'invisible': [('type', '!=', 'out_invoice')]}" />
                <field name="ncf" attrs="{'invisible': [('type', '!=', 'in_invoice')], 'required': [('type', '=', 'in_invoice')]}" />
                <field name="expense_type" attrs="{'invisible': [('type', '!=', 'in_invoice')]}" />
            </xpath>
            <xpath expr="//div//field[@name='invoice_sequence_number_next_prefix']" position="replace">
                <field name="invoice_sequence_number_next_prefix" class="oe_inline" attrs="{'invisible': [('type','=','in_invoice')]}" />
            </xpath>
            <xpath expr="//div//field[@name='invoice_sequence_number_next']" position="replace">
                <field name="invoice_sequence_number_next" class="oe_inline" attrs="{'invisible': [('type','=','in_invoice')]}" />
            </xpath>
            <field name="journal_id" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('state', '!=', 'draft')]}
                </attribute>
            </field>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="journal_id" position="move" />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="billing_do_view_move_reversal_form">
        <field name="name">billing.do.account.move.reversal.form</field>
        <field name="model">account.move.reversal</field>
        <field name="inherit_id" ref="account.view_account_move_reversal" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="replace">
                <field name="journal_id" attrs="{'invisible': 1}"/>
            </xpath>
        </field>
    </record>
</odoo>