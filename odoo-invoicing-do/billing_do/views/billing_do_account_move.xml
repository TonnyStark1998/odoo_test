<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="billing_do_view_move_form">
        <field name="name">billing.do.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type' and position()=1]" position="replace" />
            <xpath expr="//span[hasclass('o_form_label') and @attrs]" position="replace" />
            <xpath expr="//field[@name='invoice_sequence_number_next_prefix' and position()=1]" position="replace" />
            <xpath expr="//field[@name='invoice_sequence_number_next' and position()=1]" position="replace" />
            <xpath expr="//h1[hasclass('mt0')]" position="replace">
                <span class="o_form_label" attrs="{'invisible': ['|', ('type', 'in', ['entry', 'in_invoice', 'in_refund']), ('name', '=', '/')]}">
                    <field name="type" readonly="1" nolabel="1"/>
                </span>
                <h2 class="mt0" style="color:#474747;">
                    <field name="name" readonly="True" attrs="{'invisible':['|', ('name', '=', '/'), ('type','in',['in_invoice', 'in_refund'])]}"/>
                    <field name="ncf_sequence_next_number" readonly="True" attrs="{'invisible':['|', ('type', 'in', ['in_invoice', 'in_refund']), '|', ('state','!=','draft'), ('name','!=','/')]}" />
                </h2>
            </xpath>
            <xpath expr="//field[@name='ref']" position="before">
                <field name="income_type" attrs="{'invisible': [('type', '!=', 'out_invoice')], 'readonly': [('state','!=','draft')]}" />
                <field name="ncf" attrs="{'invisible': [('type', 'not in', ['in_invoice', 'in_refund'])], 'required': [('type', 'in', ['in_invoice', 'in_refund'])]}" />
                <field name="expense_type" attrs="{'invisible': [('type', 'not in', ['in_invoice', 'in_refund'])], 'readonly': [('state','!=','draft')]}" />
            </xpath>
            <field name="journal_id" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('state', '!=', 'draft')]}
                </attribute>
            </field>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="journal_id" position="move" />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="billing_do_view_invoice_tree">
        <field name="name">billing.do.account.move.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="ncf" invisible="context.get('default_type') not in ('in_invoice', 'in_refund','in_receipt')" />
            </field>
            <field name="name" position="attributes">
                <attribute name="invisible">
                    context.get('default_type') not in ('out_invoice', 'out_refund','out_receipt')
                </attribute>
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="billing_do_view_move_reversal_form">
        <field name="name">billing.do.account.move.reversal.form</field>
        <field name="model">account.move.reversal</field>
        <field name="inherit_id" ref="account.view_account_move_reversal" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="replace">
                <field name="journal_id" attrs="{'invisible': 1}"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="billing_do_view_dgii_606_tree">
        <field name="name">billing.do.account.dgii.606.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree default_order="invoice_date desc" create="false" import="false">
                <field name="state" invisible="1" />
                <field name="report_vat" />
                <field name="report_vat_type" />
                <field name="expense_type" string="Expense Type" />
                <field name="ncf" string="Tax Receipt Number" />
                <field name="report_reversed_move" string="Tax Receipt Reversed Number" />
                <field name="report_bill_date_month" string="Invoice Date Month" />
                <field name="report_bill_date_day" string="Invoice Date Day" />
                <field name="report_bill_payment_date_month" string="Payment Date Month" />
                <field name="report_bill_payment_date_day" string="Payment Date Day" />
                <field name="report_bill_service_amount" />
                <field name="report_bill_consumable_amount" />
                <field name="report_bill_total_amount" />
                <field name="report_bill_tax_amount" string="ITBIS Tax" />
                <field name="report_bill_itbis_billed_amount" />
                <field name="report_bill_itbis_held_amount" />
                <field name="report_bill_itbis_proportional_amount" />
                <field name="report_bill_itbis_expense_amount" />
                <field name="report_bill_itbis_ahead_amount" />
                <field name="report_bill_itbis_purchases_amount" />
                <field name="report_bill_isr_type" />
                <field name="report_bill_isr_held_amount" />
                <field name="report_bill_isr_purchases_amount" />
                <field name="report_isc_amount" />
                <field name="report_bill_other_taxes_amount" />
                <field name="report_legaltip_amount" />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="billing_do_view_dgii_607_tree">
        <field name="name">billing.do.account.dgii.607.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree default_order="invoice_date desc" create="false" import="false">
                <field name="state" invisible="1" />
                <field name="report_vat" />
                <field name="report_vat_type" />
                <field name="name" />
                <field name="report_reversed_move" string="Tax Receipt Reversed Number" />
                <field name="income_type" />
                <field name="report_invoice_date" string="Invoice Date" />
                <field name="report_invoice_held_date" string="Invoice Held Date" />
                <field name="amount_untaxed_signed" string="Invoice Amount" />
                <field name="amount_tax_signed" string="Invoice Tax Amount" />
                <field name="report_invoice_itbis_held_by_thirdparty_amount" />
                <field name="report_invoice_itbis_perceived_amount" />
                <field name="report_invoice_isr_held_by_thirdparty_amount" />
                <field name="report_invoice_isr_perceived_amount" />
                <field name="report_isc_amount" />
                <field name="report_invoice_other_taxes_amount" />
                <field name="report_legaltip_amount" />
                <field name="report_invoice_cash_amount" />
                <field name="report_invoice_bank_amount" />
                <field name="report_invoice_credit_debit_card_amount" />
                <field name="report_invoice_credit_sale_amount" />
                <field name="report_invoice_gift_amount" />
                <field name="report_invoice_permute_amount" />
                <field name="report_invoice_other_sale_way_amount" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="dgii_reports_format_606">
        <field name="name">Formato de envío de datos 606 (Compras)</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="billing_do_view_dgii_606_tree" />
        <field name="domain">['&amp;', ('type','in',['in_invoice']), ('state','in',['posted'])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first course</p>
        </field>
    </record>
    <record model="ir.actions.act_window" id="dgii_reports_format_607">
        <field name="name">Formato de envío de datos 607 (Ventas)</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="billing_do_view_dgii_607_tree" />
        <field name="domain">['&amp;', ('type','in',['out_invoice']), ('state', 'in', ['posted'])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first course</p>
        </field>
    </record>
    <menuitem id="main_menu_dgii_reports" name="DGII Reports" parent="account_accountant.menu_accounting" sequence="30" />
    <menuitem id="menu_dgii_reports_606" name="Formato de compras (606)" parent="main_menu_dgii_reports" action="dgii_reports_format_606" sequence="1" />
    <menuitem id="menu_dgii_reports_607" name="Formato de ventas (607)" parent="main_menu_dgii_reports" action="dgii_reports_format_607" sequence="2" />
</odoo>